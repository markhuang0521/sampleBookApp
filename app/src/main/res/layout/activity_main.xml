<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_app_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"

            android:src="@drawable/ebook_logo" />

        <TextView
            android:id="@+id/et_app_title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="App title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_app_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_app_title"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_main_all_book"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="all books" />

        <Button
            android:id="@+id/btn_main_already_read_book"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="already read book" />


        <Button
            android:id="@+id/btn_main_current_book"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/btn_main_already_read_book"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="current book" />

        <Button
            android:id="@+id/btn_main_wishlist"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/btn_main_current_book"
            android:layout_marginTop="10dp"
            android:text="wish lists" />

        <Button
            android:id="@+id/btn_main_favorite"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/btn_main_wishlist"
            android:layout_marginTop="10dp"
            android:text="favorite books" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_app_about"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="about" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Developed by Xiaoming Huang" />

    </LinearLayout>
</RelativeLayout>